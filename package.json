{
  "name": "desafio-cientec",
  "version": "1.0.0",
  "description": "Repositório usado para resolução do desafio do processo seletivo da Cientec.",
  "type": "module",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:static": "copyfiles -u 1 \"src/**/*.{html,css,js}\" dist",
    "build:prisma": "prisma migrate deploy && prisma generate",
    "build": "npm run clean && npm run build:prisma && tsc && npm run build:static",
    "start:dev": "tsx watch src/index.ts",
    "start:prod": "node dist/index.js",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pedrohbcarvalho/desafio-cientec.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pedrohbcarvalho/desafio-cientec/issues"
  },
  "homepage": "https://github.com/Pedrohbcarvalho/desafio-cientec#readme",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "copyfiles": "^2.4.1",
    "prisma": "^6.16.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "cpf-cnpj-validator": "^1.0.3"
  }
}
